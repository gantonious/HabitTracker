<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ca.antonious.habittracker">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".HabitTrackerApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".habitlist.HabitListActivity"
            android:label="@string/habit_list_activity_title">
        </activity>
        <activity
            android:name=".addhabit.AddHabitActivity"
            android:label="@string/add_habit_activity_title" />
        <activity
            android:name=".habitdetails.HabitDetailsActivity"
            android:label="@string/habit_details_activity_title" />

        <activity
            android:name=".MainActivity"
            android:label="@string/habit_list_activity_title"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter android:label="@string/app_name">
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>